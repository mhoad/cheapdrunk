<!doctype html xmlns:og="http://ogp.me/ns#" xmlns:fb="https://www.facebook.com/2008/fbml">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Cheapdrunk" %></title>
    <meta name="description" content="">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
    <meta property="og:title" content="<%= @venue.name %>"/>
    <meta property="og:type" content="bar"/>
    <meta property="og:url" content="<%= url_for(:only_path => false) %>"/>
    <meta property="og:image" content=""/>
    <meta property="og:site_name" content="Cheap Drunk"/>
    <meta property="fb:admins" content="USER_ID"/>
    <meta property="og:description" content="<%= @venue.description %>"/>
    <meta property="og:latitude" content="<%= @venue.latitude %>"/>
    <meta property="og:longitude" content="<%= @venue.longitude %>"/>
    <meta property="og:street-address" content="<%= @venue.street_address %>"/>
    <meta property="og:locality" content="<%= @venue.suburb %>"/>
    <meta property="og:region" content="NSW"/>
    <meta property="og:postal-code" content="<%= @venue.postcode %>"/>
    <meta property="og:country-name" content="Australia"/>
  </head>
  <body itemscope itemtype="http://schema.org/WebPage">
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
     <div role="main" id="wrap-container" class="container">
      
      <div itemprop="breadcrumb">
        <%= render_breadcrumbs :separator => ' > ' %>
      </div>

      <%= render 'layouts/messages' %>
    
            <%= yield %>

          <footer>

          </footer>
<%= debug(params) if Rails.env.development? %>
  </body>
</html>