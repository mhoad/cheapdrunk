
    <%= form_for(@venue) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :street_address %>
      <%= f.text_field :street_address %>

      <%= f.label :suburb %>
      <%= f.text_field :suburb %>

      <%= f.label :postcode %>
      <%= f.text_field :postcode %>

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.fields_for :trading_times do |builder| %>
        <%= builder.label :monday_opens_at, "Monday Open Time" %>
